---
import { Image } from "astro:assets";
import logoImage from "../assets/logo.png";
---

<nav class="top-nav">
  <div class="nav-container">
    <div class="left-nav">
      <a href="https://maps.app.goo.gl/eQ6s6r5JwarL4Nmc7" class="nav-link">directions</a>
      <span class="nav-dot">.</span>
      <a href="/contact" class="nav-link" transition:animate="fade">event inquiry</a>
      <span class="nav-dot">.</span>
      <a href="/menu" class="nav-link" transition:animate="fade">drinks</a>
    </div>
    <div class="middle-nav">
      <a href="/"><Image src={logoImage} alt="MARTINE Logo" class="logo" /></a>
    </div>
    <div class="right-nav">
      <a href="https://www.instagram.com/martine_kocktails" target="_blank" class="nav-link">instagram</a>
    </div>
  </div>
</nav>

<button class="hamburger-icon" id="hamburger-icon" aria-label="Menu">
  <span class="icon-1"></span>
  <span class="icon-2"></span>
  <span class="icon-3"></span>
</button>

<div class="mobile-menu">
  <a href="/" class="mobile-nav-link">home</a>
  <a href="https://maps.app.goo.gl/eQ6s6r5JwarL4Nmc7" class="mobile-nav-link">directions</a>
  <a href="/contact" class="mobile-nav-link" transition:animate="fade">event inquiry</a>
  <a href="https://www.instagram.com/martine_kocktails" class="mobile-nav-link">instagram</a>
  <a href="/menu" class="mobile-nav-link" transition:animate="fade">drinks</a>
  <a href="/roulette" class="mobile-nav-link" transition:animate="fade">roulette</a>
</div>

<style>
  .top-nav {
    position: fixed;
    top: 2vh;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: 20px 0;
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 90%;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
  }

  .left-nav,
  .right-nav {
    display: flex;
    align-items: center;
  }

  .left-nav {
    flex: 1;
    justify-content: flex-start;
  }

  .right-nav {
    flex: 1;
    justify-content: flex-end;
  }

  .middle-nav {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }

  .nav-link {
    color: #dedede;
    text-decoration: none;
    position: relative;
    font-weight: 500;
    font-style: normal;
    font-size: 16px;
    letter-spacing: 2px;
    margin: 0 10px;
  }

  .nav-link:hover {
    opacity: 1 !important;
    transition: opacity 0.3s ease;
    color: #849f69;
  }

  .nav-link::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 1px;
    bottom: -2px;
    left: 0;
    background-color: #dedede;
    transform: scaleX(0);
    transform-origin: bottom right;
    transition: transform 0.3s ease;
  }

  .nav-link:hover::after {
    transform: scaleX(1);
    transform-origin: bottom left;
  }

  .nav-dot {
    margin: 0 5px;
    opacity: 0.5;
  }

  .logo {
    width: 150px;
    height: auto;
    filter: invert(0%) sepia(0%) saturate(0%) hue-rotate(0deg) brightness(100%) contrast(100%);
    transition: filter 0.3s ease; /* Smooth transition */
  }

  .logo:hover {
    filter: invert(64%) sepia(40%) saturate(334%) hue-rotate(47deg) brightness(100%) contrast(70%);
  }

  .hamburger-icon {
    display: none;
    position: fixed;
    top: 20px;
    right: 20px;
    width: 60px;
    height: 60px;
    background: rgba(255, 255, 255, 0.2);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    z-index: 1001;
    transition: all 0.3s ease-in-out;
  }

  .hamburger-icon:hover {
    transform: scale(1.1);
    box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);
  }

  .icon-1,
  .icon-2,
  .icon-3 {
    position: absolute;
    left: 25%;
    width: 32px;
    height: 3px;
    background-color: #dedede;
    transition: all 400ms cubic-bezier(0.84, 0.06, 0.52, 1.8);
  }

  .icon-1 {
    top: 35%;
  }

  .icon-2 {
    top: 50%;
    transform: translateY(-50%);
  }

  .icon-3 {
    bottom: 35%;
  }

  .hamburger-icon.active .icon-1 {
    transform: rotate(40deg) translate(4px, 5px);
  }

  .hamburger-icon.active .icon-3 {
    transform: rotate(-40deg) translate(5px, -7px);
  }

  .hamburger-icon.active .icon-2 {
    opacity: 0;
  }

  .mobile-menu {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.9);
    z-index: 1000;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    transition: all 0.3s ease-in-out;
  }

  .mobile-menu.active {
    display: flex;
  }

  .mobile-nav-link {
    color: #dedede;
    text-decoration: none;
    font-size: 36px;
    margin: 10px 0;
    font-weight: 500;
    font-style: normal;
    letter-spacing: 3px;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.3s ease-in-out;
  }

  .mobile-menu.active .mobile-nav-link {
    opacity: 1;
    transform: translateY(0);
  }

  .mobile-nav-link:hover {
    color: #849f69;
  }

  @media (max-width: 981px) {
    .top-nav {
      display: none;
    }

    .hamburger-icon {
      display: block;
    }
  }
</style>

<script>
  function initializeMenu() {
    const hamburgerIcon = document.getElementById("hamburger-icon");
    const mobileMenu = document.getElementById("mobile-menu");
    const mobileNavLinks = document.querySelectorAll<HTMLElement>(".mobile-nav-link");

    if (hamburgerIcon && mobileMenu) {
      hamburgerIcon.addEventListener("click", () => {
        console.log("Hamburger clicked!");
        hamburgerIcon.classList.toggle("active");
        mobileMenu.classList.toggle("active");

        if (mobileMenu.classList.contains("active")) {
          mobileNavLinks.forEach((link, index) => {
            setTimeout(() => {
              link.style.opacity = "1";
              link.style.transform = "translateY(0)";
            }, index * 100);
          });
        } else {
          mobileNavLinks.forEach((link) => {
            link.style.opacity = "0";
            link.style.transform = "translateY(20px)";
          });
        }
      });
    }
  }

  // Run the initialization function when the DOM is loaded
  document.addEventListener("DOMContentLoaded", initializeMenu);

  // Re-run the initialization after Astro page transitions
  document.addEventListener("astro:page-load", initializeMenu);
</script>
